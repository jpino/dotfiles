######################
# Keyboard shortcuts #
######################

# Applications
bindsym Mod4+b exec firefox
bindsym Mod4+m exec urxvt -e bash -i -c "cmus"
bindsym Mod4+h exec thunar

# Print screen
bindsym Print exec --no-startup-id gnome-screenshot --interactive

# Lock screen
bindsym XF86Launch1 exec --no-startup-id i3lock -u -i ~/.config/i3/9okUv.png -c 0000ff
bindsym Mod4+l exec --no-startup-id i3lock -u -i ~/.config/i3/9okUv.png -c 0000ff

# Brightness control
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 20
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 20

# Volume control
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

# Keyboard layout toggler (es <-> us)
bindsym Mod4+k exec --no-startup-id changekb

# It's show time
bindsym Mod4+space exec --no-startup-id notify-send -t 5000 "$(date +"%H:%M - %A %d %B %Y")"

# Show workspace number
bindsym Mod4+w exec --no-startup-id showws


##################
# Run on startup #
##################

# Set background
exec --no-startup-id xsetroot -solid "#111111"

# Run network manager
exec --no-startup-id nm-applet

# Remap CapsLock to Escape
exec --no-startup-id setxkbmap -option ctrl:nocaps

# Run ~/.Xresources
exec --no-startup-id xrdb ~/.Xresources

# Disable touchpad
exec --no-startup-id synclient TouchpadOff=1
