#
# Set ANSI colors
#
source ~/.config/automatic.shell


#
# Fancy prompt.
#
if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
    # If ssh: [user@hostname] [directory] \n ðŸš€
    export PS1="\[\033[01;32m\][\u@\h] \[\033[01;34m\][\w]\n\[\033[01;31m\]ðŸš€\[\033[00m\] "
else
    # No ssh: [directory] \n ðŸš€
    export PS1="\[\033[01;34m\][\w]\n\[\033[01;31m\]ðŸš€\[\033[00m\] "
fi

#
# Fancy PATH to binaries
#
export PATH="/home/chanante/dotfiles/scripts:/home/chanante/.cargo/bin:"$PATH

export DATABASE_URL="sqlite://todos.db"

#
# Aliases
#
alias ll="ls -ahlF"
alias weather="curl wttr.in"

